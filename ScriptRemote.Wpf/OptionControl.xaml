<UserControl x:Class="ScriptRemote.Wpf.OptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:ScriptRemote.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="20" VerticalAlignment="Bottom">
            <Label Content="Theme" Width="100" FontSize="14"/>
            <RadioButton x:Name="lightBtn" GroupName="theme" Checked="lightBtn_Checked" />
            <Label Content="Light" Width="50"/>
            <RadioButton x:Name="darkBtn" GroupName="theme" Checked="darkBtn_Checked" />
            <Label Content="Dark" Width="50"/>
        </StackPanel>
        
    </Grid>
</UserControl>
